.container {
  background-color: rgb(247, 248, 255);
  height: 100vh;
} 

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.item-center {
  align-items: center;
}

.item-end {
  align-items:flex-end;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}
.text-center {
  text-align: center;
}

.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

.border-bottom {
  border-bottom: 1px solid #ebedf0;
}

.border-top {
  border-top: 1px solid #ebedf0;
}

page {
  --button-border-radius: 8px;
  --button-primary-background-color: #2c9678;
