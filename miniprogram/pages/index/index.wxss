/**index.wxss**/

.top-container {
  height: 40%;
  position: relative;
}

.top-bg {
  position: absolute;
  background-color: #9abeaf;
  bottom: 60rpx;
  top: 0;
  left: 0;
  right: 0;
}

.usermotto {
  height: 50%;
  position: relative;
}

.user-motto {
  margin-top: 100rpx;
  color: #fff;
}
.setting-container {
  height: 50%;
}

.setting-card {
  box-shadow: 0px 0px 3.6px rgba(0, 0, 0, 0.05),
  0px 0px 10px rgba(0, 0, 0, 0.074),
  0px 0px 24.1px rgba(0, 0, 0, 0.097),
  0px 0px 80px rgba(0, 0, 0, 0.15)
;
}

.player-button-container {
  height: 60%;
}

.player-button {
  background-color: #2c9678;
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
  box-shadow: 0px 0px 2.2px #a4cab6,
  0px 0px 5.3px #a4cab6,
  0px 0px 10px #a4cab6,
  0px 0px 17.9px #a4cab6,
  0px 0px 33.4px #a4cab6,
  0px 0px 80px #a4cab6
;

}

.player-button-inner {
    display: block;
    position: relative;
    z-index: 3;
    width: 0;
    height: 0;
    margin-left: 10rpx;
    border-left: 40rpx solid #fff;
    border-top: 24rpx solid transparent;
    border-bottom: 24rpx solid transparent;
}

.ring-check-icon  {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: green;
}